<div class="container">
    <div id="loggedin">
        <h1>[tbjradio]</h1><br/>

        <% if( typeof profile !== 'undefined' && profile) { %>

        <script type="text/javascript" src="<%- sails.config.url_base %>/js/spotify.js"></script>

        <script type="text/javascript">
            getUserPlayLists("<%- sails.config.url_base %>/spotify/get_user_play_lists", "#playlist-results");
        </script>

        <div id="user-profile">
            <h2>Hello, <%- profile.display_name %>!</h2>
            <a href="<%- sails.config.url_base %>/admin/logout"><i class="icon-off"></i> Log out</a>

            <div class="media">
                <div class="pull-left">
                    <img class="media-object" width="150" src="<%- profile.images[0].url %>"/>
                </div>
                <div class="media-body">
                    <dl class="dl-horizontal">
                        <dt>Id</dt>
                        <dd><%- profile.id %></dd>
                        <dt>Email</dt>
                        <dd><%- profile.email %></dd>
                    </dl>
                </div>
            </div>
        </div>

        <div id="playlists">
            <div id="playlists-head">
                <h3>[Your playlists]</h3>
            </div>
            <div id="playlists-list"></div>
            <div id="playlist-detail"></div>
            <div id="playlist-results"></div>
        </div>

        <script type="text/javascript">
            getUserPlayList("<%- sails.config.url_base %>/spotify/get_user_play_list", "#playlists-list", "#playlist-results");
        </script>

        <% } %>
    </div>
</div>